@model OnlineShoppingStore.WebUI.Models.ProductsListViewModel
@{
    ViewBag.Title = "List of products";
}

<h2>List of products</h2>

@foreach (var product in Model.Products)
{
    @Html.Partial("ProductSummary",product)
}
    <div class="btn-group pull-righ"> 
        @Html.PageLinks(
                            Model.PagingInfo, x => Url.Action("List",new { category = Model.CurrentCategory,page = x  })
                        )
    </div>


