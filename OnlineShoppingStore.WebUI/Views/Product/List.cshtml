@model OnlineShoppingStore.WebUI.Models.ProductsListViewModel
@{
    ViewBag.Title = "List of products";
}

<h2>List of products</h2>

@foreach (var product in Model.Products)
{
    <div class="well">
        <h3>
            <strong>@product.Name</strong>
            <span class="pull-righ label label-primary ">@product.Price.ToString("c")</span>
        </h3>
        <span class="lead"> @product.Description</span>
       
    </div>
}
    <div class="btn-group pull-righ"> 
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("List",
        new { page = x }))
    </div>


